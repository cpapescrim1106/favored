# Favored Environment Variables

# Database
POSTGRES_USER=favored
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=favored
DATABASE_URL=postgresql://favored:change_me_in_production@localhost:5432/favored

# Ports (development)
WEB_PORT=3000
DB_PORT=5432
PRISMA_STUDIO_PORT=5555

# Worker settings
SCAN_INTERVAL="*/10 * * * *"
INVENTORY_SYNC_INTERVAL="*/10 * * * * *"

# Pending fill confirmation (chain-first)
MM_PENDING_FILL_TTL_MS=900000
MM_PENDING_FILL_TOLERANCE=0.1

# CLOB WS position updates (disabled by default; chain sync is authoritative)
CLOB_WS_POSITION_UPDATES=false

# Polymarket CLOB API (L2 credentials)
# Required for MVP1+ (real trading)
# Generate these using: npx tsx scripts/generate-api-creds.ts
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=

# Wallet (for signing orders)
# For Polymarket.com login, export from: Profile -> Export Private Key
WALLET_PRIVATE_KEY=

# Optional: Polymarket proxy wallet (profile) address that holds funds
# Set this if you use Polymarket.com with a browser wallet (Safe proxy)
POLYMARKET_FUNDER_ADDRESS=

# Surfshark Proxy (required for US geoblock bypass)
# Get manual credentials from: https://my.surfshark.com/vpn/manual-setup/main
SURFSHARK_USER=
SURFSHARK_PASS=
SURFSHARK_SERVER=de-fra.prod.surfshark.com
SURFSHARK_PORT=80

# Optional
LOG_LEVEL=info
